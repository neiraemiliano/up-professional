# Production Backend Environment Variables
# Home-Fixed Marketplace - Backend Production Config

# Database Configuration (PostgreSQL Production)
# Replace with your actual production database credentials
DATABASE_URL="postgresql://homefixed:HomeFixed!2025@127.0.0.1:5432/marketplace?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Security Configuration
JWT_SECRET="HF-2024-SuperSecretJWTKey-Change-This-In-Production-xyz123"
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=https://home-fixed.com
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MercadoPago Production Configuration
# Get these from: https://www.mercadopago.com.ar/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN="APP_USR-your-production-access-token-here"
MERCADOPAGO_PUBLIC_KEY="APP_USR-your-production-public-key-here"
MERCADOPAGO_WEBHOOK_SECRET="your-webhook-secret-key-here"

# Payment URLs (Production)
MERCADOPAGO_SUCCESS_URL="https://home-fixed.com/payment/success"
MERCADOPAGO_FAILURE_URL="https://home-fixed.com/payment/failure"
MERCADOPAGO_PENDING_URL="https://home-fixed.com/payment/pending"
MERCADOPAGO_NOTIFICATION_URL="https://api.home-fixed.com/api/payments/webhook"

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@home-fixed.com
SMTP_PASS=your-email-app-password
EMAIL_FROM="Home-Fixed <noreply@home-fixed.com>"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"
UPLOAD_DEST=/var/www/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/home-fixed/app.log

# Redis Configuration (Optional - for sessions/cache)
REDIS_URL="redis://redis.home-fixed.com:6379"
REDIS_PASSWORD="your-redis-password"

# Monitoring and Health Checks
HEALTH_CHECK_PATH=/health
METRICS_ENABLED=true

# External Services
GOOGLE_MAPS_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SENDGRID_API_KEY=SG.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
AWS_S3_BUCKET=home-fixed-uploads
AWS_REGION=us-east-1

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=1
