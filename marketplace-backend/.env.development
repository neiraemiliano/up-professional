# Development Backend Environment Variables
# Home-Fixed Marketplace - Backend Development Config

# Database Configuration (Local PostgreSQL)
DATABASE_URL="postgresql://emilianoneira@localhost:5432/marketplace?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development
HOST=localhost
UPLOAD_DIR=./uploads

# Security Configuration (less strict for dev)
JWT_SECRET="dev-jwt-secret-key-change-in-production"
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=8

# CORS Configuration (allow localhost)
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting (more lenient in dev)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# MercadoPago Test Configuration
MERCADOPAGO_ACCESS_TOKEN="TEST-your-test-access-token-here"
MERCADOPAGO_PUBLIC_KEY="TEST-your-test-public-key-here"
MERCADOPAGO_WEBHOOK_SECRET="dev-webhook-secret"

# Payment URLs (Development)
MERCADOPAGO_SUCCESS_URL="http://localhost:5174/subscription/success"
MERCADOPAGO_FAILURE_URL="http://localhost:5174/subscription/failure"
MERCADOPAGO_PENDING_URL="http://localhost:5174/payment/pending"
API_URL="http://localhost:3000"

# Development Features
DEBUG=true
LOG_LEVEL=debug

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"
UPLOAD_DEST=./uploads

# Disable external services in dev
REDIS_URL=
SMTP_HOST=
GOOGLE_MAPS_API_KEY=
SENDGRID_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Security (disabled for dev)
HELMET_ENABLED=false
TRUST_PROXY=0