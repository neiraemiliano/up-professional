# Development Frontend Environment Variables
# Home-Fixed Marketplace - Frontend Development Config

# API Configuration - Point to localhost backend
VITE_API_URL=http://localhost:3000/api

# App Configuration
VITE_APP_NAME="Home-Fixed (Dev)"
VITE_APP_URL=http://localhost:5173
VITE_APP_VERSION=2.0.2-dev

# MercadoPago Test Configuration
VITE_MERCADOPAGO_PUBLIC_KEY=TEST-YOUR-TEST-PUBLIC-KEY-HERE

# Development Features
VITE_DEV_TOOLS=true
VITE_DEBUG_MODE=true

# Optional: Analytics and Tracking (disabled in dev)
VITE_GOOGLE_ANALYTICS_ID=
VITE_GOOGLE_MAPS_API_KEY=

# Optional: Feature Flags (enabled for testing)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CHAT=true

# Development URLs
VITE_CDN_URL=http://localhost:3000
VITE_ASSETS_URL=http://localhost:3000/assets